<p id="notice"><%= notice %></p>

<h1>Thanksgiving Potluck at Al & Neil's </h1>
<h2>Nov 26, 2022</h2>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Food</th>
      <th>Total</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guests.each do |guest| %>
      <tr>
        <td><%= guest.name %></td>
        <td><%= guest.food %></td>
        <td><%= guest.total %></td>
        <td><%= guest.email %></td>
        <td><%= link_to 'Show', guest %></td>
        <td><%= link_to 'Edit', edit_guest_path(guest) %></td>
        <td><%= link_to 'Destroy', guest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

